<resources>>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:title">@string/app_name</item>

    </style>


    <style name="editProfileEdittext" parent="Base.Widget.AppCompat.EditText">

        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="profileTitleTextView" parent="Base.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profileSubTitleTextView" parent="Base.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20dp</item>

    </style>


    <style name="ButtonStyle_default1" parent="Base.Widget.AppCompat.Button.Borderless">

        <item name="android:padding">1dp</item>
        <item name="android:adjustViewBounds">true</item>

    </style>


    <style name="toolbarTheme" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
    </style>

    <style name="toolbarStyle" parent="@style/Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/toolBarText</item>
    </style>

    <style name="toolBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlue</item>
    </style>


</resources>
